<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutline">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/priority_indicator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="#1a73e8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/nombre_cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="María González"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@id/priority_indicator"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORD-001"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/priority_indicator"
            app:layout_constraintTop_toBottomOf="@+id/nombre_cliente"/>

        <TextView
            android:id="@+id/direccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Av. Principal 123, Lima"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@id/priority_indicator"
            app:layout_constraintTop_toBottomOf="@+id/order_id"/>

        <TextView
            android:id="@+id/paquete_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paquete x2, Sobre x1"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toEndOf="@id/priority_indicator"
            app:layout_constraintTop_toBottomOf="@+id/direccion"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/prioridad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prioridad 1"
            android:background="#e8f0fe"
            android:textColor="#1a73e8"
            android:padding="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/nombre_cliente"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>